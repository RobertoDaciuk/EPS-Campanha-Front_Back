# API Configuration
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=30000

# App Configuration
VITE_APP_NAME="EPS Campanhas"
VITE_APP_VERSION="2.0.0"
VITE_APP_DESCRIPTION="Sistema de Campanhas de Incentivo"

# Environment
VITE_NODE_ENV=development
VITE_LOG_LEVEL=debug

# Features
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_PWA=true

# External Services
VITE_UPLOAD_URL=https://upload.example.com
VITE_CDN_URL=https://cdn.example.com

# Analytics (opcional)
VITE_GA_ID=
VITE_HOTJAR_ID=

# Sentry (opcional)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# WhatsApp Integration (opcional)
VITE_WHATSAPP_API_URL=
VITE_WHATSAPP_API_TOKEN=

# File Upload
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.xlsx,.xls,.csv

# Cache Configuration
VITE_CACHE_PREFIX=eps_
VITE_CACHE_VERSION=v2.0.0

# PWA Configuration
VITE_PWA_NAME="EPS Campanhas"
VITE_PWA_SHORT_NAME="EPS"
VITE_PWA_DESCRIPTION="Sistema de campanhas de incentivo para vendedores"
VITE_PWA_THEME_COLOR="#0ea5e9"
VITE_PWA_BACKGROUND_COLOR="#ffffff"

# Development
VITE_MOCK_DELAY=1000
VITE_DEBUG_QUERIES=false
VITE_SHOW_REACT_QUERY_DEVTOOLS=true
